<odoo>
    <record id="view_it_support_assign_wizard_form" model="ir.ui.view">
        <field name="name">it.support.assign.wizard.form</field>
        <field name="model">it.support.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign IT Support">
                <group>
                    <field name="user_id"/>
                </group>
                <footer>
                    <button string="Assign" type="object" name="action_assign" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
