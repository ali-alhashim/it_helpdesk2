<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cancel_confirm_wizard" model="ir.ui.view">
        <field name="name">cancel.confirm.wizard.form</field>
        <field name="model">cancel.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Cancellation">
                <group>
                    <p>Are you sure you want to cancel this ticket?</p>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_cancel" class="btn-primary"/>
                    <button string="Cancel" type="object" name="action_cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
